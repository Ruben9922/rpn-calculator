<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.112"
          fx:controller="uk.co.ruben9922.rpncalculator.MainController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <Label text="RPN expression"/>
    <Label GridPane.rowIndex="1" text="Result"/>
    <TextField GridPane.columnIndex="1" promptText="1 2 3 4 5 + * - /" fx:id="rpnExpressionTextField"/>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" editable="false" fx:id="resultTextField"/>
    <Label GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="3" textAlignment="CENTER"
           fx:id="messageLabel"/>
    <ButtonBar GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2">
        <buttons>
            <Button ButtonBar.buttonData="APPLY" defaultButton="true" mnemonicParsing="false"
                    onAction="#evaluateButtonAction" text="Evaluate"/>
            <Button ButtonBar.buttonData="CANCEL_CLOSE" cancelButton="true" mnemonicParsing="false" text="Clear"/>
        </buttons>
    </ButtonBar>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</GridPane>
